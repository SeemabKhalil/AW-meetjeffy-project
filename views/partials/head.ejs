
	<title>meetjeffy</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="https://fonts.googleapis.com/css?family=Alegreya+Sans:300,400" rel="stylesheet">
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
<link type="text/css" rel="stylesheet" href="./css/style.css" />
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="./js/main.js"></script>
<script src="./js/form.js"></script>

<style>

/* Fonts */

@import 'fonts.css';

/* General styles */

body {
	margin: 0;
	padding: 0;
	font-family: 'Alegreya Sans', sans-serif;
}

a {
	text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
	font-weight: normal;
}

h1 {
	color: #fff;
    font-size: 70px;
    font-weight: lighter;
}

h3 {
	width: 100%;
	margin-top: 0;
	font-size: 40px;
	text-align: center;
}

h3:first-letter {
	color: #dca453;
}

.mj-container {
	display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    box-sizing: border-box;
}

.mj-align-center {
	align-items: center;
}

/* Header */

header {
	position: relative;
}

header nav {
    position: fixed;
    width: 100%;
    margin: 10px 0;
    padding: 10px 0;
    z-index: 999;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
}

header nav.mj-nav-fixed {
	margin: 0;
    background: rgba(0, 0, 0, .5);
}

header nav ul.mj-navigation {
	display: flex;
    list-style-type: none;
	margin: 0;
	padding: 0;
}

header nav ul.mj-navigation li a {
    display: block;
    padding: 0 16px;
    color: #fff;
    font-size: 16px;
    text-transform: uppercase;
}

header nav ul.mj-navigation li:last-child a {
	padding-right: 0;
}

header nav ul.mj-navigation li a:after {
	content: '';
	display: block;
	height: 1px;
	width: 0;
	background-color: #fff;
	opacity: 0;
	-webkit-transition: all .3s ease;
	transition: all .3s ease;
}

header nav ul.mj-navigation li a:hover:after {
    width: 100%;
    opacity: 1;
}

header nav .mj-nav-toggle {
	display: none;
}

.mj-header-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
}

.mj-main-banner {
	display: block;
	width: 100%;
	height: 700px;
}

.mj-header-text .mj-arrow {
	display: inline-block;
    padding: 40px;
    border: solid #fff;
    border-width: 0 3px 3px 0;
    cursor: pointer;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    -webkit-transition: opacity .3s ease;
    transition: opacity .3s ease;
}

.mj-header-text .mj-arrow:hover {
	opacity: .7;
}

/* Logo */

.mj-logo {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;
    color: #fff;
    font-size: 26px;
    border: solid 2px #fff;
    border-radius: 100%;
}

/* Sections */

.mj-section {
	padding: 85px 0;
}

/* About us */

#mj-about .mj-column {
	width: 48%;
	margin-top: 25px;
	text-align: center;
}

#mj-about i {
	font-size: 45px;
    color: #dca453;
}

/* Gallery */

#mj-gallery {
	display: flex;
	flex-wrap: wrap;
	list-style-type: none;
	margin: 0;
	padding: 0;
}

#mj-gallery li {
	width: 20%;
	position: relative;
	overflow: hidden;
	cursor: pointer;
}

#mj-gallery li img {
    display: block;
    width: 100%;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
}

#mj-gallery li:hover img {
	-webkit-transform: scale(1.2);
	transform: scale(1.2);
}

#mj-gallery li:after {
	display: block;
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.4);
	-webkit-transition: all .3s ease;
    transition: all .3s ease;
}

#mj-gallery li:hover:after {
	width: 0;
	height: 0;
}

.mj-backdrop {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.9);
    z-index: 9999;
}

.mj-backdrop img {
    max-width: 80%;
}

span.mj-backdrop-close {
	position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    top: 20px;
    right: 20px;
    height: 30px;
    width: 30px;
    font-size: 16px;
    color: #fff;
    border: solid 1px #fff;
    border-radius: 100%;
    cursor: pointer;
}

/* Testimonials */

#mj-testimonials {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mj-testimonials {
	position: relative;
    max-width: 500px;
}

.mj-testimonials ul {
    display: flex;
    padding: 0;
    list-style-type: none;
    overflow: hidden;
}

.mj-testimonials ul li {
    min-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.mj-testimonials ul li .mj-user-data img {
    border-radius: 100%;
}

.mj-testimonials ul li .mj-user-name {
	display: block;
    margin: 15px 0;
}

.mj-testimonials ul li > p {
    font-style: italic;
    font-size: 20px;
    color: #ccc;
    text-align: center;
}

.mj-testimonials .mj-arrow {
	position: absolute;
	display: inline-block;
	top: 50%;
    padding: 20px;
    border: solid #eee;
    border-width: 0 3px 3px 0;
    cursor: pointer;
    -webkit-transition: border-color .3s ease;
    transition: border-color .3s ease;
}

.mj-testimonials .mj-arrow.mj-arrow-left {
	right: 120%;
    -webkit-transform: rotate(135deg);
    transform: rotate(135deg);
}

.mj-testimonials .mj-arrow.mj-arrow-right {
	left: 120%;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
}

.mj-testimonials .mj-arrow:hover {
	border-color: #dca453;
}

/* Contact */

#mj-contact {
    background: #f8f8f8;
}

#mj-contact form {
	display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 500px;
    margin: 0 auto;
}

#mj-contact form input:not([type="submit"]),
#mj-contact form textarea {
    width: 100%;
    padding: 20px;
    margin-bottom: 20px;
    border: solid 1px #ccc;
    font-size: 14px;
    box-sizing: border-box;
    outline: none;
}

#mj-contact form textarea {
    height: 100px;
    resize: none;
}

#mj-contact form *::-webkit-input-placeholder {
	color: #ccc;
	font-style:italic;
}

#mj-contact form *::-moz-placeholder {
	color: #ccc;
	font-style:italic;
}

#mj-contact form *:-ms-input-placeholder {
	color: #ccc;
	font-style:italic;
}

#mj-contact form *:-moz-input-placeholder {
	color: #ccc;
	font-style:italic;
}

#mj-contact input[type="submit"] {
    border: none;
    margin-top: 20px;
    padding: 10px 30px;
    color: #fff;
    background-color: #dca352;
    box-shadow: inset 0 -3px 0 0 #c79652;
    font-size: 16px;
    text-transform: uppercase;
    cursor: pointer;
    outline: none;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
}

#mj-contact input[type="submit"]:hover {
    color: #f5f5f5;
    box-shadow: inset 0 -3px 0 0 #a27c47;
}

/* Footer */

footer {
	padding: 10px 0;
    background-color: #444;
}

footer .mj-logo {
	width: 45px;
    height: 45px;
    font-size: 20px;
}

footer .mj-social-icons {
	display: flex;
    list-style-type: none;
}

footer .mj-social-icons li {
	margin-left: 15px;
}

footer .mj-social-icons li a {
	color: #fff;
    display: flex;
    -webkit-transition: opacity .3s ease;
    transition: opacity .3s ease;
}

footer .mj-social-icons li a:hover {
	opacity: .7;
}

/* Animations */

.mj-pulsate {
	-webkit-animation: pulsate 3s ease-in-out;
	-webkit-animation-iteration-count: infinite;
	opacity: .3;
	padding-bottom:  110px;
}

@-webkit-keyframes pulsate {
	0% {
        opacity: .3;
	}
	50% {
        opacity: 1;
	}
	100% {
        opacity: .3;
	}
}

/* Responsive */

@media all and (max-width: 1020px) {

    .mj-container {
	    padding-left: 15px;
	    padding-right: 15px;
	}
}

@media all and (max-width: 820px) {

	h1 {
		font-size: 55px;
	}

    .mj-header-text .mj-arrow,
	.mj-testimonials .mj-arrow {
	    padding: 15px;
	}

	.mj-testimonials .mj-arrow.mj-arrow-right {
	    left: 100%;
	}

	.mj-testimonials .mj-arrow.mj-arrow-left {
	    right: 100%;
	}

}

@media all and (max-width: 680px) {

    header nav {
    	position: absolute;
    }

    header nav.mj-nav-fixed {
    	background: none;
    }

    ul.mj-navigation {
    	list-style-type: none;
	    margin: 0;
	    padding: 0;
	    max-height: 0;
	    overflow: hidden;
	    background: rgba(0,0,0,.7);
	    -webkit-transition: max-height .4s ease;
	    transition: max-height .4s ease;
    }

    ul.mj-navigation.mj-navigation-opened {
    	max-height: 500px;
    	-webkit-transition: max-height 1s ease;
	    transition: max-height 1s ease;
    }

    ul.mj-navigation li {
        padding: 0 15px;
    }

    ul.mj-navigation li a {
    	display: block;
	    padding: 10px 0;
	    color: #fff;
	    border-bottom: solid 1px #999;
    }

    ul.mj-navigation li:first-child a {
    	padding-top: 20px;
    }

    ul.mj-navigation li:last-child a {
    	padding-bottom: 20px;
    	border-bottom: none;
    }

    header nav .mj-nav-toggle {
		display: block;
		color: #fff;
		font-size: 25px;
	}
}

@media all and (max-width: 600px) {

    .mj-logo {
    	width: 50px;
	    height: 50px;
	    font-size: 20px;
    }

    h1, h3 {
    	font-size: 35px;
    }

    .mj-header-text .mj-arrow,
    .mj-testimonials .mj-arrow {
        padding: 10px;
    }

    #mj-about .mj-column {
	    width: 100%;
	}

	#mj-gallery li {
	    width: 33.33%;
	}

	.mj-testimonials {
		max-width: 80%;
	}

	.mj-testimonials ul li > p {
	    font-size: 17px;
	}

	#mj-contact form input:not([type="submit"]),
    #mj-contact form textarea {
    	width: 90%;
    	padding: 12px;
    }
}


</style>
